    }
  },
  {
    "key": "n",
    "command": "vim.remap",
    "when": "editorTextFocus && vim.mode == 'Visual'",
    "args": {
      "after": ["0"]
    }
  },
  {
    "key": "k",
    "command": "vim.remap",
    "when": "editorTextFocus && vim.mode == 'Visual'",
    "args": {
      "after": ["$"]
    }
  },
  {
    "key": "e",
    "command": "vim.remap",
