    }
  },
  {
    "key": "b",
    "command": "vim.remap",
    "when": "editorTextFocus && vim.mode == 'Normal'",
    "args": {
      "after": ["<C-r>"]
    }
  },
  {
    "key": "s",
    "command": "vim.remap",
